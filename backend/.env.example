# Configuração do Servidor
PORT=3001
NODE_ENV=development

# Configuração do Banco de Dados
VITE_DB_HOST=localhost
VITE_DB_PORT=5432
VITE_DB_NAME=appmedstaff
VITE_DB_USER=postgres
VITE_DB_PASSWORD=postgres

# Configuração JWT
VITE_JWT_SECRET=your-super-secret-jwt-key-here
VITE_JWT_EXPIRES_IN=24h
VITE_JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-here
VITE_JWT_REFRESH_EXPIRES_IN=7d

# Configuração de Reset de Senha
PASSWORD_RESET_SECRET=your-password-reset-secret-key-here
PASSWORD_RESET_EXPIRES_IN=1h
PASSWORD_RESET_TOKEN_LENGTH=32

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Configuração de Email
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM_NAME=AppMedStaff
EMAIL_FROM_ADDRESS=noreply@appmedstaff.com

# URLs do Frontend
FRONTEND_URL=http://localhost:3000
RESET_PASSWORD_URL=http://localhost:3000/reset-password

# Monitoramento e Métricas
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
STRICT_RATE_LIMIT_MAX=3

# Logging
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=20971520
LOG_FILE_MAX_FILES=5

# Configurações de Segurança
SESSION_SECRET=your-session-secret-key-here
COOKIE_SECRET=your-cookie-secret-key-here
ENCRYPTION_KEY=your-32-character-encryption-key-here
BCRYPT_SALT_ROUNDS=12

# Configurações de Timeout
LOGIN_ATTEMPT_TIMEOUT=15m
PASSWORD_RESET_CLEANUP_INTERVAL=1h
TOKEN_BLACKLIST_CLEANUP_INTERVAL=24h

# Configurações de Validação
MIN_PASSWORD_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=30m